<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Intelectah</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/Styles/site.css" rel="stylesheet" />
</head>

<body>
    <div id="myLateralMenu" class="lateral-menu">
        <a href="@Url.Action("Index", "Fabricante")" class="menu-link">Fabricantes</a>
        <a href="@Url.Action("Index", "Veiculo")" class="menu-link">Veículos</a>
        <a href="@Url.Action("Index", "Concessionaria")" class="menu-link">Concessionárias</a>
        <a href="@Url.Action("Index", "Cliente")" class="menu-link">Clientes</a>
        <a href="@Url.Action("Index", "Venda")" class="menu-link">Vendas</a>

        <div class="social-icons">
            <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
            <a href="https://www.facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a>
            <a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a>
        </div>
    </div>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="container d-flex justify-content-between">
            <div class="navbar-brand"><span class="logo">{/;\}</span></div>
            <div class="menu-toggle" onclick="openNav()">
                <i class="fas fa-bars"></i>
            </div>
        </div>
    </nav>

    <div id="main" class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        function openNav() {
            document.getElementById("myLateralMenu").style.right = "0";
        }

        function closeNav() {
            document.getElementById("myLateralMenu").style.right = "-250px";
        }

        document.addEventListener('click', function (event) {
            const lateralMenu = document.getElementById("myLateralMenu");
            const menuToggle = document.querySelector('.menu-toggle');

            // Click fora do menu
            if (!lateralMenu.contains(event.target) && !menuToggle.contains(event.target)) {
                closeNav();
            }
        });

        // Fecha menu
        document.querySelectorAll('.lateral-menu a').forEach(link => {
            link.addEventListener('click', function () {
                closeNav();
            });
        });
    </script>
</body>
</html>
