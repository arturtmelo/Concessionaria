@{ ViewBag.Title = "Dados Vendas"; }

<h2>@ViewBag.Title</h2>

<canvas id="vendasChart" width="1100" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('vendasChart').getContext('2d');
    var vendasPorMes = @Html.Raw(Json.Encode(ViewBag.VendasPorMes));

    var labels = vendasPorMes.map(function(venda) { return venda.Month + '/' + venda.Year; });
    var data = vendasPorMes.map(function(venda) { return venda.Total; });

    var chart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Vendas Mensais',
                data: data,
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
    });
</script>

<div class="d-flex justify-content-center">
    <form action="@Url.Action("ExportarPDF", "Relatorio")" method="post" style="display:inline;">
        <button type="submit" class="btn btn-secondary">Exportar - PDF</button>
    </form>
    <form action="@Url.Action("ExportarGoogleSheets", "Relatorio")" method="post" style="display:inline;">
        <button type="submit" class="btn btn-warning">Exportar - Google Sheets</button>
    </form>
</div>
